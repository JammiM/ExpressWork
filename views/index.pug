extends partials/layout

//- main heading
block main
  h1= message
  ul
    each val in users
      li=val.fn
    
  h2 add customer
  form(method="POST" action="/users/add")
    label First name
    br
    input(type="text" name="firstName")
    br
    input(type="submit" value="submit")
    br

  if errors
    h3 There was an errors
    ul
      each error in errors
        li=error.msg
  else
    h3 No error detected
